@model List<PagosDelDoctorViewModel>

<h2>Mis Pagos Recibidos</h2>

@if (Model.Any())
{
    <table class="table table-striped">
        <thead class="table-dark">
            <tr>
                <th>Paciente</th>
                <th>Monto</th>
                <th>Método de Pago</th>
                <th>Fecha de Pago</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pago in Model)
            {
                <tr>
                    <td>@pago.PacienteCompleto</td>
                    <td>@pago.Monto.ToString("C")</td>
                    <td>@pago.MetodoPago</td>
                    <td>@pago.FechaPago.ToString("dd/MM/yyyy")</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="alert alert-info">
        <strong>Total de pagos: @Model.Count</strong> |
        <strong>Monto total: @Model.Sum(p => p.Monto).ToString("C")</strong>
    </div>
}
else
{
    <div class="alert alert-warning">
        No hay pagos registrados para mostrar.
    </div>
}