<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Consultorio_PDS2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Consultorio_PDS2.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" asp-controller="Home" asp-action="Index">ConsultorioPDS</a>

    <div class="collapse navbar-collapse">
      <ul class="navbar-nav ms-auto">
        @if (User.Identity.IsAuthenticated)
        {
            <li class="nav-item">
                <span class="nav-link">Hola, @User.Identity.Name</span>
            </li>
            <li class="nav-item">
                <form method="post" asp-controller="LoginRegistro" asp-action="Logout" id="logoutForm">
                    <button type="submit" class="btn btn-link nav-link">Cerrar sesión</button>
                </form>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link" asp-controller="LoginRegistro" asp-action="Login">Iniciar sesión</a>
            </li>
        }
      </ul>
    </div>
  </div>
</nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Consultorio_PDS2 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
