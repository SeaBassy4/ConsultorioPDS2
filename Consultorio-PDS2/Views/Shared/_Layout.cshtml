@using System.Security.Claims
@{
    ViewData["Title"] = "ConsultorioPDS - Inicio";
    bool isLoggedIn = User.Identity.IsAuthenticated;
    string? role = User.FindFirst(ClaimTypes.Role)?.Value;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Consultorio_PDS2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Consultorio_PDS2.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <a class="navbar-brand" asp-controller="Home" asp-action="Index">ConsultorioPDS</a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">

                @if (!User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="LoginRegistro" asp-action="Login">Iniciar sesión</a>
                    </li>
                }
                else
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                            Hola, @User.Identity.Name
                        </a>

                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">

                            @* Opciones para Doctor *@
                            @if (role == "Doctor")
                            {
                                <li>
                                    <a class="dropdown-item" asp-controller="Doctor" asp-action="RegistrarPaciente">
                                        Registrar Paciente
                                    </a>
                                </li>

                                <li>
                                    <a class="dropdown-item" asp-controller="Doctor" asp-action="RegistrarConsulta">
                                        Registrar Consulta
                                    </a>
                                </li>

                                <li>
                                    <a class="dropdown-item" asp-controller="Doctor" asp-action="VerConsultas">
                                        Ver Consultas
                                    </a>
                                </li>

                                <li>
                                    <a class="dropdown-item" asp-controller="Pagos" asp-action="PagosDelDoctor">
                                        Mis Pagos
                                    </a>
                                </li>

                                <li><hr class="dropdown-divider" /></li>
                            }

                                    @if(role == "Admin")
                                    {
                                    <li>
                                    <a class="dropdown-item" asp-controller="LoginRegistro" asp-action="Registro">
                                        Registrar Usuario
                                    </a>
                                    </li>
                                    <li>
                                    <a class="dropdown-item" asp-controller="Doctor" asp-action="Crear">
                                        Registrar Doctor
                                    </a>
                                    </li>
                                    <li>
                                    <a class="dropdown-item" asp-controller="Especialidades" asp-action="Index">
                                        Registrar Especialidad
                                    </a>
                                    </li>


                                    }

                            @* Logout *@
                            <li>
                                <form method="post" asp-controller="LoginRegistro" asp-action="Logout">
                                    <button type="submit" class="dropdown-item">Cerrar sesión</button>
                                </form>
                            </li>

                        </ul>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Consultorio_PDS2 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
