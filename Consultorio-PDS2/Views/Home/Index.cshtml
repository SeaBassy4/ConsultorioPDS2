@{
    ViewData["Title"] = "Home Page";
}

<div class="container py-5 text-center">
    <h1 class="display-4 fw-bold mb-3 text-primary">Bienvenido a ConsultorioPDS</h1>
    <p class="lead mb-5 text-muted">
        Gestiona tus reseñas, usuarios y consultas médicas de manera fácil y rápida.
    </p>

    <div class="d-flex flex-column flex-md-row justify-content-center gap-3">
        <a asp-controller="LoginRegistro" asp-action="Registro" class="btn btn-lg btn-outline-primary px-4 py-2">
            <i class="bi bi-person-plus"></i> Registro 
        </a>

        <a asp-controller="Doctor" asp-action="VerConsultas" class="btn btn-lg btn-success px-4 py-2">
            <i class="bi bi-people"></i> Ver Pacientes / Consultas
        </a>

        <a asp-controller="Doctor" asp-action="RegistrarConsulta" class="btn btn-lg btn-primary px-4 py-2">
            <i class="bi bi-people"></i> Registrar Consulta
        </a>
        <a asp-controller="Doctor" asp-action="RegistrarPaciente" class="btn btn-lg btn-primary px-4 py-2">
        <i class="bi bi-person-plus"></i> Registrar Paciente
        </a>

    </div>
</div>
